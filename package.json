{
  "name": "@signmax/remix-base",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "description": "Server and shared utils for React Router 7 projects",
  "license": "MIT",
  "author": "Signmax AB <team@signomatic.ee> (https://skyltmax.se/)",
  "homepage": "https://github.com/skyltmax/remix-base#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyltmax/remix-base.git"
  },
  "bugs": {
    "url": "https://github.com/skyltmax/remix-base/issues"
  },
  "keywords": [
    "remix",
    "react-router",
    "signmax",
    "skyltmax"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./server": {
      "import": "./src/server.ts",
      "types": "./src/server.ts"
    },
    "./instrumentation": {
      "import": "./src/instrumentation.ts",
      "types": "./src/instrumentation.ts"
    },
    "./load_context": {
      "import": "./src/load_context.ts",
      "types": "./src/load_context.ts"
    },
    "./logger": {
      "import": "./src/logger.ts",
      "types": "./src/logger.ts"
    },
    "./metrics": {
      "import": "./src/metrics.ts",
      "types": "./src/metrics.ts"
    },
    "./middleware": {
      "import": "./src/middleware/index.ts",
      "types": "./src/middleware/index.ts"
    },
    "./test/helpers": {
      "import": "./src/test/helpers.ts",
      "types": "./src/test/helpers.ts"
    },
    "./util": {
      "import": "./src/util/index.ts",
      "types": "./src/util/index.ts"
    },
    "./client": {
      "import": "./src/api/client.ts",
      "types": "./src/api/client.ts"
    },
    "./secrets": {
      "import": "./src/secrets.ts",
      "types": "./src/secrets.ts"
    },
    "./growthbook": {
      "import": "./src/growthbook.ts",
      "types": "./src/growthbook.ts"
    }
  },
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "typecheck": "tsc",
    "validate": "run-p -l format lint typecheck",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "src"
  ],
  "prettier": "@signmax/config/prettier",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@signmax/config": "^0.0.11",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/node": "^22.17.1",

{
  "name": "@signmax/remix-base",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "description": "Server and shared utils for React Router 7 projects",
  "license": "MIT",
  "author": "Signmax AB <team@signomatic.ee> (https://skyltmax.se/)",
  "homepage": "https://github.com/skyltmax/remix-base#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyltmax/remix-base.git"
  },
  "bugs": {
    "url": "https://github.com/skyltmax/remix-base/issues"
  },
  "keywords": [
    "remix",
    "react-router",
    "signmax",
    "skyltmax"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./instrumentation": {
      "import": "./dist/instrumentation.js",
      "types": "./dist/instrumentation.d.ts"
    },
    "./load_context": {
      "import": "./dist/load_context.js",
      "types": "./dist/load_context.d.ts"
    },
    "./logger": {
      "import": "./dist/logger.js",
      "types": "./dist/logger.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics.js",
      "types": "./dist/metrics.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./test/helpers": {
      "import": "./dist/test/helpers.js",
      "types": "./dist/test/helpers.d.ts"
    },
    "./util": {
      "import": "./dist/util/index.js",
      "types": "./dist/util/index.d.ts"
    },
    "./client": {
      "import": "./dist/api/client.js",
      "types": "./dist/api/client.d.ts"
    },
    "./secrets": {
      "import": "./dist/secrets.js",
      "types": "./dist/secrets.d.ts"
    },
    "./growthbook": {
      "import": "./dist/growthbook.js",
      "types": "./dist/growthbook.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "format": "prettier . --write",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "validate": "run-p -l format lint typecheck",
    "bump": "npx npm-check-updates --dep prod,dev,peer,optional --target latest -i",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "prettier": "@signmax/config/prettier",
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@signmax/config": "^0.0.11",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/node": "^22.17.1",
    "@types/set-cookie-parser": "^2.4.10",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@typescript-eslint/utils": "8.46.3",
    "@vitest/coverage-v8": "4.0.8",
    "@vitest/eslint-plugin": "1.4.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-testing-library": "7.13.3",
    "globals": "16.5.0",
    "msw": "^2.12.0",
    "node-mocks-http": "^1.17.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-ignored": "1.0.0",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.926.0",
    "@nichtsam/helmet": "^0.3.1",
    "@tusbar/cache-control": "^1.0.2",
    "chalk": "^5.6.2",
    "close-with-grace": "^2.3.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "get-port": "^7.1.0",
    "graphql-request": "^7.3.1",
    "isbot": "^5.1.32",
    "lru-cache": "^11.2.2",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "prom-client": "^15.1.3",
    "set-cookie-parser": "^2.7.2"
  },
  "peerDependencies": {
    "@react-router/express": "^7.0.0",
    "@sentry/node": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "@sentry/profiling-node": "^8.0.0 || ^9.0.0 || ^10.0.0",
    "express": "^5.0.0",
    "react-router": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "@sentry/profiling-node": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@growthbook/growthbook": "^1.6.2",
    "eventsource": "^4.0.0"
  }
}
